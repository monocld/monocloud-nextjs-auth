{
  "name": "@monocloud/nextjs-auth",
  "version": "0.2.0",
  "description": "MonoCloud Next.js Authentication SDK",
  "keywords": [
    "monocloud",
    "nextjs",
    "sdk",
    "node",
    "auth",
    "next"
  ],
  "homepage": "https://www.monocloud.com",
  "bugs": {
    "url": "https://github.com/monocld/monocloud-nextjs-auth/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monocld/monocloud-nextjs-auth.git"
  },
  "license": "MIT",
  "author": {
    "name": "MonoCloud",
    "email": "support@monocloud.com"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/client/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "lint:es": "eslint src --fix --quiet",
    "lint:ts": "tsc",
    "lint": "npm run lint:es && npm run lint:ts",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@monocloud/node-auth-core": "0.1.3",
    "cookie": "^0.6.0",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@edge-runtime/jest-environment": "^3.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cookie": "^0.6.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "body-parser": "^1.20.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jose": "^5.6.3",
    "nock": "^14.0.0-beta.7",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.0",
    "tough-cookie": "^4.1.4",
    "ts-jest": "^29.2.1",
    "typescript": "^5.5.3",
    "url-search-params-polyfill": "^8.2.5"
  },
  "peerDependencies": {
    "next": ">=10.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.*"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageProvider": "v8",
    "projects": [
      "<rootDir>/jest-node.config.js",
      "<rootDir>/jest-edge.config.js",
      "<rootDir>/jest-client.config.js"
    ]
  }
}
